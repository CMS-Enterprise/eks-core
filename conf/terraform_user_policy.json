{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "arn:aws:iam::*:role/terraform"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::aws-terraform"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
          "arn:aws:s3:::aws-terraform/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "*",
      "Resource": [
        "arn:aws:dynamodb:us-east-1:000000000000:table/terraform-locks"
      ]
    }
  ]
}